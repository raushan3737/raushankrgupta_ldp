type Mutation{
    createBook(book:BookDTO):Book
}

type Query{
    allBooks:[Book]
    getBook(bookId:Int):Book
}

type Book{
    id:ID!
    title:String
    desc:String
    author:String
    price:Float
    pages:Int
}

input BookDTO{
    title:String
    desc:String
    author:String
    price:Float
    pages:Int
}


